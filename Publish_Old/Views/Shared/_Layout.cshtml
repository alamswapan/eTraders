<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <!--application ico images-->
    
    <!--bootstrap styles-->
    <link href="@Url.Content("~/Content/Bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Bootstrap/css/font-awesome.min.css")" />
    <link href="@Url.Content("~/Content/bootstrap.min.custom.css")" rel="stylesheet" />
    <!--[if IE 7]>
		<link rel="stylesheet" href="@Url.Content("~/Content/Bootstrap/css/font-awesome-ie7.min.css")" />
	<![endif]-->
    <!--[if lte IE 8]>
		<link rel="stylesheet" href="@Url.Content("~/Content/Bootstrap/css/ace-ie.min.css")" />
    <![endif]-->
    <!--ace styles-->
    <link href="@Url.Content("~/Content/Bootstrap/css/ace.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Bootstrap/css/ace-responsive.min.css")" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/Content/Bootstrap/css/ace-skins.min.css")" />
    <link href="@Url.Content("~/Content/ace.min.custom.css")" rel="stylesheet" />
    <!--application styles-->
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.contextmenu.css")" rel="stylesheet" type="text/css" />
    <!--jquery styles-->
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui.custom.css")" rel="stylesheet" type="text/css" />

    <!--jqgrid styles-->
    <link href="@Url.Content("~/Content/themes/jqGrid/jquery-ui-jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/jqGrid/jquery-ui-jqgrid.css")" rel="stylesheet" type="text/css" />
    <!--kendo ui css-->
    <link rel="stylesheet" href="@Url.Content("~/Content/kendo/2013.2.716/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/kendo/2013.2.716/kendo.metro.min.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/kendo/2013.2.716/kendo.uniform.min.css")" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="@Url.Content("~/Content/kendo.metro.min.custom.css")" rel="stylesheet" type="text/css" />
    <!-- jquery scripts -->
    <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <!-- File Upload scripts -->

    <script src="@Url.Content("~/Scripts/fileUpload/ajaxupload.min.js")" type="text/javascript"></script>

    <!-- application scripts -->
    <script src="@Url.Content("~/Scripts/CommonJS.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Utility.js")" type="text/javascript"></script>
    <!-- jqgrid scripts -->

    <script src="@Url.Content("~/Scripts/jquery.jqGrid.locale-en-4.1.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid-4.1.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.addons-4.1.2.js")" type="text/javascript"></script>
    <!-- jQuery input mask plugin scripts -->
    <script src="@Url.Content("~/Scripts/jquery.inputmask.bundle.min.js")" type="text/javascript"></script>
    <!-- jQuery date picker scripts -->
    <script type="text/javascript">
        $(document).ready(function () {
            $("input:submit, input:button, button", ".jqUI").button();
            $('.date').datepicker({ dateFormat: "dd/mm/yy" });
        });

        
    </script>
    <!-- bootstrap scripts -->
    <script  type="text/javascript" src="@Url.Content("~/Content/Bootstrap/js/bootstrap.min.js")" ></script>
    <!--ace scripts-->
    <script type="text/javascript" src="@Url.Content("~/Content/Bootstrap/js/ace-elements.min.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Bootstrap/js/ace.min.js")" ></script>
    <!--kendo ui scripts-->

    <script src="@Url.Content("~/Scripts/kendo/2013.2.716/kendo.web.min.js")" type="text/javascript"></script>

    <!--highcharts scripts-->
    <script src="@Url.Content("~/Scripts/highcharts/highcharts.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/highcharts/modules/exporting.js")" type="text/javascript"></script>

</head>
<body>
    <div class="page">
        <div class="navbar navbar-inverse headerFillColor">
            <div class="navbar-inner headerImage">
                <div class="container-fluid">
                    <!--/.brand-->
                    <span class="span12 text-center" style="margin-top: 10px;">
                        <label class="whiteText bold">[Petty Cash Voucher]</label>
                    </span>

                    <ul class="nav ace-nav pull-right">
                        <li class="loginInfoBackColor">
                            <a data-toggle="dropdown" href="#" class="user-menu dropdown-toggle">
                                @*<img class="nav-user-photo" src="/content/bootstrap/avatars/user.jpg" alt="Jason's Photo" />*@
                                <span id="user_info"><small>Welcome,</small> @User.Identity.Name</span> <i class="icon-caret-down"></i></a>
                            <ul class="pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-closer" id="user_menu">
                                @*<li><a href="#"><i class="icon-cog"></i>Settings </a></li>
                                <li><a href="#"><i class="icon-user"></i>Profile </a></li>*@
                                <li class="divider"></li>
                                <li><a href='@Url.Content("~/Account/LogOff")'><i class="icon-off"></i>Logout </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <!--/.ace-nav-->
                </div>
                <!--/.container-fluid-->
            </div>
            <!--/.navbar-inner-->
        </div>
        <div class="container-fluid" id="main-container">
            <a id="menu-toggler" href="#"><span></span></a>
            @if (!string.IsNullOrEmpty(ViewBag.Area))
            {
                Html.RenderAction("GetMenuList", "Menu", new { area = "", ModuleName = ViewBag.Area });
            }
            
            <div id="main-content" class="clearfix">
                @RenderBody()
                <!--/#ace-settings-container-->
            </div>
            <!--/#main-content-->
        </div>
        <!--/.fluid-container#main-container-->
        @*<a href="#" id="btn-scroll-up" class="btn btn-small btn-inverse"><i class="icon-double-angle-up icon-only bigger-110"></i></a>*@

        @* ***** Message div collection ******@
        <div id='delete-dialog' title='Delete Record' style="height: 20px">
            <p style="line-height: 1em">
                <span><img src='@Url.Content("~/Content/Images/question.jpg")' width="30px" height="30px" /></span>
                Do you want to delete this record?
            </p>
        </div>
        <div id='rollback-dialog' title='Rollback Record' style="height: 20px">
            <p style="line-height: 1em">
                <span><img src='@Url.Content("~/Content/Images/question.jpg")' width="30px" height="30px" /></span>
                Do you want to rollback this record?
            </p>
        </div>
        <div class="delete-dialog-link" title="Delete Record" style="height: 20px">
            <p style="line-height: 1em">
                <span><img src='@Url.Content("~/Content/Images/question.jpg")' width="30px" height="30px" /></span>
                Do you want to delete this record?
            </p>
        </div>
        <div id='successfull-dialog' title='Information' style="height: 20px;">
            <p style="line-height: 1em">
                <span><img src='@Url.Content("~/Content/Images/information.jpg")' width="30px" height="30px" /></span>
                <span class="msg" style="vertical-align: text-top"></span>
            </p>
        </div>
        <div id='error-dialog' title='Information' style="height: 20px;">
            <p style="line-height: 1em">
                <span><img src='@Url.Content("~/Content/Images/alert.jpg")' width="30px" height="30px" /></span>
                <span class="msg" style="vertical-align: text-top"></span>
            </p>
        </div>
        <div id="appProgressBar">
            <div style="width: 45px !important; min-width: 45px !important; height: 45px !important; min-height: 45px !important;">
                <img style="padding: 0px; margin: 7px; width: auto !important; height: auto !important;"
                     src='@Url.Content("~/Content/Images/ajax-loader.gif")' /></div>
        </div>
        <div class="clear"></div>
    </div>
    
    <div id="preDefinedNotes" class="pageLoginNotes">
    </div>

    <footer id="footer" class="footerLogo">
        <span id="pCopyRight" class="span6" style="text-align: right;">
            ACI Limited (Advancing Possibilities)
        </span>
        <span class="span6" style="text-align: right;">
            Powered by : MIS Department.
        </span>
    </footer>
</body>
</html>
