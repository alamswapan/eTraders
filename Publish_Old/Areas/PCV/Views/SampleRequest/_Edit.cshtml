@model LILI_CRM.Web.Areas.PCV.ViewModel.SampleRequestModel
@using (Ajax.BeginForm("Edit", "SampleRequest", null,
        new AjaxOptions
        {
            UpdateTargetId = "updateTargetId",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnSuccess = "EditSampleRequestSuccess",
