                    @Html.ValidationMessageFor(model => model.SupplierId)
                </span>
            </div> 
        </div>

        <div class="row-fluid">
            <div class="span6 pull-left">
                <span class="span3">
                    @Html.LabelFor(model => model.ArticleCode)
                </span>
