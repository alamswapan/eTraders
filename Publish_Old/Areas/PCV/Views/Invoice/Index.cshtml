@{
    ViewBag.Title = "Invoice";
    Layout = "~/Areas/PCV/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li><i class="icon-home"></i>Setup <span class="divider"><i class="icon-angle-right"></i></span></li>
        <li class="active"><a href="#">Invoice</a></li>
    </ul>
    <!--.breadcrumb-->
</div>

<div id="page-content" class="clearfix">
    <!--/#page-content-->
    <div class="row-fluid">
        <div id="indexPageInvoice">
            <div id="InvoiceMessageZone">
                <div id="message" class="alert alert-success" style="display: none;"></div>
            </div>
            <div id="InvoiceAddButtonZone" class="row-fluid">
                @*if ((new AIMS_UNDP.Web.Utility.AppConstant()).IsAddAssigned)
                {*@
                    <a class="btn btn-mini btn-primary" id="lnkAddInvoice" href='@Url.Content("~/PCV/Invoice/Create")'>
                        <i class="icon-plus"></i>Create New
                    </a>
                @*}*@
            </div>
            <br />
            <div id="InvoiceGridZone" class="row-fluid">
                <div id="InvoiceKendoGrid"></div>
            </div>
            <div id="InvoicePopUpZone">
                <div id="addInvoiceDialog" title="Create Invoice"></div>
                <div id="editInvoiceDialog" title="Edit Invoice"></div>
                <div id="deleteInvoiceDialog" title="Delete Invoice"></div>
                <div id="detailsInvoiceDialog" title="View Invoice"></div>
                <div id="searchArticleDialog" title="Search Artcle Invoice"></div>
            </div>
        </div>
        <script src="@Url.Content("~/Scripts/App/Invoice.js")" type="text/javascript"></script>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $(".ui-selectee").removeClass("active");
        $(".ui-selectee").removeClass("open");

        $(".mnuInvoice").addClass("active");
        $(".mnuInvoice").parent().parent().addClass("active").addClass("open");
        $(".mnuInvoice").parent().parent().addClass("open");
    });
</script>