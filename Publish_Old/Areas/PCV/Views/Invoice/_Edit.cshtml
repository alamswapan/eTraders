            <div class="hr">
            </div>
            <div class="content pull-right">
                <button type="submit" class="btn btn-mini btn-primary" id="btnEditArticle" name="btnEditArticle">
                    <i class="icon-save bigger-125"></i>Edit</button>
                &nbsp;&nbsp;
                <button type="button" class="btn btn-mini btn-primary" id="btnCancelArticle" name="btnCancelArticle"
                    value="Cancel" onclick=" $($('#editArticleDialog').dialog('close'));">
