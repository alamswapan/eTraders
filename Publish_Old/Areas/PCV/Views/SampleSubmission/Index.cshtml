@{
    ViewBag.Title = "SampleSubmission";
    Layout = "~/Areas/PCV/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li><i class="icon-home"></i>Setup <span class="divider"><i class="icon-angle-right"></i></span></li>
        <li class="active"><a href="#">Sample Submission</a></li>
    </ul>
    <!--.breadcrumb-->
</div>

<div id="page-content" class="clearfix">
    <!--/#page-content-->
    <div class="row-fluid">
        <div id="indexPageSampleSubmission">
            <div id="SampleSubmissionMessageZone">
                <div id="message" class="alert alert-success" style="display: none;"></div>
            </div>
            <div id="SampleSubmissionAddButtonZone" class="row-fluid">
                @*if ((new AIMS_UNDP.Web.Utility.AppConstant()).IsAddAssigned)
                {*@
                    <a class="btn btn-mini btn-primary" id="lnkAddSampleSubmission" href='@Url.Content("~/PCV/SampleSubmission/Create")'>
                        <i class="icon-plus"></i>Create New
                    </a>
                @*}*@
            </div>
            <br />
            <div id="SampleSubmissionGridZone" class="row-fluid">
                <div id="SampleSubmissionKendoGrid"></div>
            </div>
            <div id="SampleSubmissionPopUpZone">
                <div id="addSampleSubmissionDialog" title="Create SampleSubmission"></div>
                <div id="editSampleSubmissionDialog" title="Edit SampleSubmission"></div>
                <div id="deleteSampleSubmissionDialog" title="Delete SampleSubmission"></div>
                <div id="detailsSampleSubmissionDialog" title="View SampleSubmission"></div>
                <div id="searchArticleDialog" title="Search Artcle SampleSubmission"></div>
            </div>
        </div>
        <script src="@Url.Content("~/Scripts/App/SampleSubmission.js")" type="text/javascript"></script>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $(".ui-selectee").removeClass("active");
        $(".ui-selectee").removeClass("open");

        $(".mnuSampleSubmission").addClass("active");
        $(".mnuSampleSubmission").parent().parent().addClass("active").addClass("open");
        $(".mnuSampleSubmission").parent().parent().addClass("open");
    });
</script>