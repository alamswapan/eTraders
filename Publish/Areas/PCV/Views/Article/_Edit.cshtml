@model LILI_CRM.Web.Areas.PCV.ViewModel.ArticleModel
@using (Ajax.BeginForm("Edit", "Article", null,
        new AjaxOptions
        {
            UpdateTargetId = "updateTargetId",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnSuccess = "EditArticleSuccess",
        }, new { @id = "editArticleForm" }))
{
    
    <div class="row-fluid form-horizontal">
        <div class="popup-widget-box clearfix">
            <div class="content">
                @Html.ValidationSummary(true)
                <div id="updateTargetId" class="alert alert-info" style="display: none;">
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.ArticleCode)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.ArticleCode, new { @style = "text-align: left !important;" })
                    @Html.ValidationMessageFor(model => model.ArticleCode)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.ArticleName)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.ArticleName, new { @style = "text-align: left !important;" })
                    @Html.ValidationMessageFor(model => model.ArticleName)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.GenericName)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.GenericName, new { @style = "text-align: left !important;" })
                    @Html.ValidationMessageFor(model => model.GenericName)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.HSCode)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.HSCode)
                    @Html.ValidationMessageFor(model => model.HSCode)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.BaseUnit)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.BaseUnit)
                    @Html.ValidationMessageFor(model => model.BaseUnit)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.SamplingUnit)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.SamplingUnit)
                    @Html.ValidationMessageFor(model => model.SamplingUnit)
                </div>
            </div>


            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.UnitPrice)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.UnitPrice)
                    @Html.ValidationMessageFor(model => model.UnitPrice)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.DutyStructure)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.DutyStructure)
                    @Html.ValidationMessageFor(model => model.DutyStructure)
                </div>
            </div>

