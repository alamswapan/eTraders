@{
    ViewBag.Title = "SampleRequest";
    Layout = "~/Areas/PCV/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li><i class="icon-home"></i>Setup <span class="divider"><i class="icon-angle-right"></i></span></li>
        <li class="active"><a href="#">SampleRequest</a></li>
    </ul>
    <!--.breadcrumb-->
</div>

<div id="page-content" class="clearfix">
    <!--/#page-content-->
    <div class="row-fluid">
        <div id="indexPageSampleRequest">
            <div id="SampleRequestMessageZone">
                <div id="message" class="alert alert-success" style="display: none;"></div>
            </div>
            <div id="SampleRequestAddButtonZone" class="row-fluid">
                @*if ((new AIMS_UNDP.Web.Utility.AppConstant()).IsAddAssigned)
                {*@
                    <a class="btn btn-mini btn-primary" id="lnkAddSampleRequest" href='@Url.Content("~/PCV/SampleRequest/Create")'>
                        <i class="icon-plus"></i>Create New
                    </a>
                @*}*@
            </div>
            <br />
            <div id="SampleRequestGridZone" class="row-fluid">
                <div id="SampleRequestKendoGrid"></div>
            </div>
            <div id="SampleRequestPopUpZone">
                <div id="addSampleRequestDialog" title="Create SampleRequest"></div>
                <div id="editSampleRequestDialog" title="Edit SampleRequest"></div>
                <div id="deleteSampleRequestDialog" title="Delete SampleRequest"></div>
                <div id="detailsSampleRequestDialog" title="View SampleRequest"></div>
                <div id="searchArticleDialog" title="Search Artcle SampleRequest"></div>
            </div>
        </div>
        <script src="@Url.Content("~/Scripts/App/SampleRequest.js")" type="text/javascript"></script>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $(".ui-selectee").removeClass("active");
        $(".ui-selectee").removeClass("open");

        $(".mnuSampleRequest").addClass("active");
        $(".mnuSampleRequest").parent().parent().addClass("active").addClass("open");
        $(".mnuSampleRequest").parent().parent().addClass("open");
    });
</script>