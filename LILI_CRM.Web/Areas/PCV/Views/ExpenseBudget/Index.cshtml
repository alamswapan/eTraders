@{
    ViewBag.Title = "Sales Budget";
    Layout = "~/Areas/PCV/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li><i class="icon-home"></i>Setup <span class="divider"><i class="icon-angle-right"></i></span></li>
        <li class="active"><a href="#">ExpenseBudget</a></li>
    </ul>
    <!--.breadcrumb-->
</div>

<div id="page-content" class="clearfix">
    <!--/#page-content-->
    <div class="row-fluid">
        <div id="indexPageSalesBudget">
            <div id="SalesBudgetMessageZone">
                <div id="message" class="alert alert-success" style="display: none;"></div>
            </div>
            <div id="SalesBudgetAddButtonZone" class="row-fluid">
			@*if ((new AIMS_UNDP.Web.Utility.AppConstant()).IsAddAssigned)
                {*@
                    <a class="btn btn-mini btn-primary" id="lnkAddExpenseBudget" href='@Url.Content("~/PCV/ExpenseBudget/Create")'>
                        <i class="icon-plus"></i>Add
                    </a>
                @*}*@           
            </div>
            <br />
            <div id="ExpenseBudgetZone" class="row-fluid">
                <div id="ExpenseBudgetKendoGrid"></div>
            </div>
            <div id="ExpenseBudgetPopUpZone">
                <div id="addExpenseBudgetDialog" title="Add Sales Budget"></div>
                <div id="editExpenseBudgetDialog" title="Edit Sales Budget"></div>
                <div id="deleteExpenseBudgetDialog" title="Delete Sales Budget"></div>
                <div id="detailsExpenseBudgetDialog" title="View Sales Budget"></div>
            </div>
        </div>
        <script src="@Url.Content("~/Scripts/App/ExpenseBudget.js")" type="text/javascript"></script>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $(".ui-selectee").removeClass("active");
        $(".ui-selectee").removeClass("open");

        $(".mnuCustomer").addClass("active");
        $(".mnuCustomer").parent().parent().addClass("active").addClass("open");
        $(".mnuCustomer").parent().parent().addClass("open");
    });
</script>