                <span class="control-label">
                    @Html.LabelFor(model => model.SubCategoryId)
                </span>
                <div class="controls">
                    @Html.DropDownList("SubCategoryId", Model.ddlProductSubCategory)
                    @Html.ValidationMessageFor(model => model.SubCategoryId)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.OrganizationId)
                </span>
                <div class="controls">
                    @Html.DropDownList("OrganizationId", Model.ddlOrganization)
                    @Html.ValidationMessageFor(model => model.OrganizationId)
                </div>
            </div>*@


            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.Origin)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.Origin)
                    @Html.ValidationMessageFor(model => model.Origin)
                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.MOQ)
