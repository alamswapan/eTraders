                </div>
            </div>

            <div class="control-group">
                <span class="control-label">
                    @Html.LabelFor(model => model.LeadTime)
                </span>
                <div class="controls">
                    @Html.TextBoxFor(model => model.LeadTime)
                    @Html.ValidationMessageFor(model => model.LeadTime)
                </div>
            </div>



            <div class="hr">
            </div>
            <div class="content pull-right">
                <button type="submit" class="btn btn-mini btn-primary" id="btnEditProduct" name="btnEditProduct">
                    <i class="icon-save bigger-125"></i>Edit</button>
                &nbsp;&nbsp;
                <button type="button" class="btn btn-mini btn-primary" id="btnCancelProduct" name="btnCancelProduct"
                    value="Cancel" onclick=" $($('#editProductDialog').dialog('close'));">
                    <i class="icon-remove bigger-125"></i>Cancel</button>
            </div>
