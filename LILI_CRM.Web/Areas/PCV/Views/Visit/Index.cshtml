@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/PCV/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li><i class="icon-home"></i>Setup <span class="divider"><i class="icon-angle-right"></i></span></li>
        <li class="active"><a href="#">Visit Information</a></li>
    </ul>
    <!--.breadcrumb-->
</div>

<div id="page-content" class="clearfix">
    <!--/#page-content-->
    <div class="row-fluid">
        <div id="indexPageVisit">
            <div id="VisitMessageZone">
                <div id="message" class="alert alert-success" style="display: none;"></div>
            </div>
            <div id="VisitAddButtonZone" class="row-fluid">
                @*if ((new AIMS_UNDP.Web.Utility.AppConstant()).IsAddAssigned)
                {*@
                    <a class="btn btn-mini btn-primary" id="lnkAddVisit" href='@Url.Content("~/PCV/Visit/Create")'>
                        <i class="icon-plus"></i>Add
                    </a>
                @*}*@
            </div>
            <br />
            <div id="VisitGridZone" class="row-fluid">
                <div id="VisitKendoGrid"></div>
            </div>
            <div id="VisitPopUpZone">
                <div id="addVisitDialog" title="Add Visit"></div>
                <div id="editVisitDialog" title="Edit Visit"></div>
                <div id="deleteVisitDialog" title="Delete Visit"></div>
                <div id="detailsVisitDialog" title="View Visit"></div>
            </div>
        </div>
        <script src="@Url.Content("~/Scripts/App/Visit.js")" type="text/javascript"></script>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $(".ui-selectee").removeClass("active");
        $(".ui-selectee").removeClass("open");

        $(".mnuProduct").addClass("active");
        $(".mnuProduct").parent().parent().addClass("active").addClass("open");
        $(".mnuProduct").parent().parent().addClass("open");
    });
</script>