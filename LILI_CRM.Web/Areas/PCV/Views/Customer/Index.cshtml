@{
    ViewBag.Title = "Customer";
    Layout = "~/Areas/PCV/Views/Shared/_Layout.cshtml";
}

<div id="breadcrumbs">
    <ul class="breadcrumb">
        <li><i class="icon-home"></i>Setup <span class="divider"><i class="icon-angle-right"></i></span></li>
        <li class="active"><a href="#">Customer</a></li>
    </ul>
    <!--.breadcrumb-->
</div>

<div id="page-content" class="clearfix">
    <!--/#page-content-->
    <div class="row-fluid">
        <div id="indexPageCustomer">
            <div id="CustomerMessageZone">
                <div id="message" class="alert alert-success" style="display: none;"></div>
            </div>
            <div id="CustomerAddButtonZone" class="row-fluid">
                @*if ((new AIMS_UNDP.Web.Utility.AppConstant()).IsAddAssigned)
                {*@
                    <a class="btn btn-mini btn-primary" id="lnkAddCustomer" href='@Url.Content("~/PCV/Customer/Create")'>
                        <i class="icon-plus"></i>Add
                    </a>
                @*}*@
            </div>
            <br />
            <div id="CustomerGridZone" class="row-fluid">
                <div id="CustomerKendoGrid"></div>
            </div>
            <div id="CustomerPopUpZone">
                <div id="addCustomerDialog" title="Add Customer"></div>
                <div id="editCustomerDialog" title="Edit Customer"></div>
                <div id="deleteCustomerDialog" title="Delete Customer"></div>
                <div id="detailsCustomerDialog" title="View Customer"></div>
            </div>
        </div>
        <script src="@Url.Content("~/Scripts/App/Customer.js")" type="text/javascript"></script>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $(".ui-selectee").removeClass("active");
        $(".ui-selectee").removeClass("open");

        $(".mnuCustomer").addClass("active");
        $(".mnuCustomer").parent().parent().addClass("active").addClass("open");
        $(".mnuCustomer").parent().parent().addClass("open");
    });
</script>